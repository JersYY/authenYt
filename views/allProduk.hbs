<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>All Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">
      <a class="navbar-brand" href="/">FashionShop</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
          <li class="nav-item"><a class="nav-link active" href="/allProduk">Products</a></li>
          <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
          <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="hero-section text-center py-5 bg-light">
    <div class="container">
      <h1>All Products</h1>
      <p class="lead text-muted">Explore our complete product collection</p>
    </div>
  </section>

  <!-- Product List -->
  <main class="container my-4 d-flex flex-wrap gap-4 justify-content-center">
  {{#each products}}
  <div class="product-card position-relative" data-product-id="{{this.id}}" style="width: 250px;">
    <img src="{{this.image_url}}" alt="{{this.name}}" class="img-fluid rounded" />
    <!-- Wishlist Toggle -->
    <button class="favorite-icon btn btn-link p-0 position-absolute top-0 end-0 m-2" aria-label="Toggle Wishlist" type="button">
      {{#if (includes ../wishlistProductIds this.id)}}
      <!-- Filled heart -->
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#dc3545" viewBox="0 0 24 24"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41 1.01 4.5 2.09C13.09 4.01 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/></svg>
      {{else}}
      <!-- Outline heart -->
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="#dc3545" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.72-7.72 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>
      {{/if}}
    </button>
    <div class="overlay-detail position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center">
      <button class="btn btn-dark btn-detail">Detail</button>
    </div>
    <h5 class="mt-2 text-center">{{this.name}}</h5>
    <p class="text-center text-muted">Rp {{this.price}}</p>
  </div>
  {{/each}}
</main>


  <!-- Product Detail Modal -->
  <div class="modal fade" id="productDetailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content p-3">
        <div class="modal-header">
          <h5 class="modal-title" id="modalTitle">Product Detail</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body d-flex gap-4 flex-wrap">
          <div class="product-images flex-shrink-0 d-flex flex-column" style="width: 300px;">
            <!-- Images inserted by JS -->
          </div>
          <div class="product-info flex-grow-1">
            <p id="modalDescription"></p>
            <p><strong>Price:</strong> Rp <span id="modalPrice"></span></p>
            <p><strong>Category:</strong> <span id="modalCategory"></span></p>
            <div class="mb-3">
              <label for="quantityInput" class="form-label">Quantity</label>
              <input type="number" id="quantityInput" min="1" value="1" class="form-control" style="width: 100px;">
            </div>
            <button class="btn btn-primary" id="btnAddToCart">Add to Cart</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="footer-section bg-dark text-white py-4 mt-5 shadow-sm">
    <div class="container text-center">
      <h5>FashionShop</h5>
      <p>&#169; 2025 FashionShop. All rights reserved.</p>
      <div class="social-icons d-flex justify-content-center gap-3">
        <a href="#" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
        <a href="#" aria-label="Twitter"><i class="bi bi-twitter"></i></a>
        <a href="#" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/script.js"></script>
</body>
</html>
